{
  "name": "koatty_cli",
  "version": "3.12.1",
  "description": "Koatty command line tool.",
  "scripts": {
    "eslint": "eslint --ext .js ./src",
    "prepublishOnly": "npm test && git push --follow-tags origin",
    "prerelease": "npm test",
    "release": "standard-version --release-as patch",
    "release:pre": "npm run release -- --prerelease",
    "release:major": "npm run release -- --release-as major",
    "release:minor": "npm run release -- --release-as minor",
    "test": "npm run eslint && jest --rootDir ./test --passWithNoTests"
  },
  "bin": {
    "kt": "./src/index.js",
    "koatty": "./src/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koatty/koatty_cli.git"
  },
  "engines": {
    "node": ">10.0.0"
  },
  "author": {
    "name": "richenlin",
    "email": "richenlin@gmail.com"
  },
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/koatty/koatty_cli/issues"
  },
  "maintainers": [
    {
      "name": "richenlin",
      "email": "richenlin@gmail.com"
    }
  ],
  "homepage": "https://github.com/koatty/koatty_cli",
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@commitlint/cli": "^18.x.x",
    "@commitlint/config-conventional": "^18.x.x",
    "conventional-changelog-cli": "^4.x.x",
    "eslint": "^8.x.x",
    "eslint-plugin-jest": "^27.x.x",
    "husky": "^4.x.x",
    "jest": "^29.x.x",
    "jest-html-reporters": "^3.x.x",
    "standard-version": "^9.x.x",
    "supertest": "^7.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cli-spinner": "^0.2.10",
    "commander": "^3.0.2",
    "del": "^6.0.0",
    "isomorphic-git": "^1.25.0",
    "koatty_graphql": "^1.0.2",
    "koatty_lib": "^1.3.4",
    "koatty_proto": "^1.1.12",
    "ncp": "^2.0.0",
    "prettier": "^3.5.3",
