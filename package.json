{
  "name": "koatty_cli",
  "version": "3.11.2",
  "description": "Koatty command line tool.",
  "scripts": {
    "build": "tsc",
    "eslint": "eslint --ext .ts,.js ./src",
    "eslint-fix": "eslint --ext .ts,.js ./src --fix",
    "prepublishOnly": "npm run build",
    "prerelease": "npm test",
    "release": "standard-version --release-as patch",
    "release:pre": "npm run release -- --prerelease",
    "release:major": "npm run release -- --release-as major",
    "release:minor": "npm run release -- --release-as minor",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:cli": "node test/run-tests.js",
    "test:unit": "jest test/cli-functionality.test.js",
    "test:integration": "jest test/project-creation.test.js test/module-creation.test.js",
    "test:websocket": "jest test/websocket-controller.test.js",
    "test:comprehensive": "jest test/comprehensive.test.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:websocket && npm run test:comprehensive"
  },
  "bin": {
    "kt": "./src/index.js",
    "koatty": "./src/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koatty/koatty_cli.git"
  },
  "engines": {
    "node": ">10.0.0"
  },
  "author": {
    "name": "richenlin",
    "email": "richenlin@gmail.com"
  },
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/koatty/koatty_cli/issues"
  },
  "maintainers": [
    {
      "name": "richenlin",
      "email": "richenlin@gmail.com"
    }
  ],
  "homepage": "https://github.com/koatty/koatty_cli",
  "devDependencies": {
    "@commitlint/cli": "^18.x.x",
    "@commitlint/config-conventional": "^18.x.x",
    "conventional-changelog-cli": "^4.x.x",
    "eslint": "^8.x.x",
    "eslint-plugin-jest": "^27.x.x",
    "husky": "^4.x.x",
    "jest": "^29.x.x",
    "jest-html-reporters": "^3.x.x",
    "openapi-types": "^12.1.3",
    "reflect-metadata": "^0.x.x",
    "standard-version": "^9.x.x",
    "supertest": "^7.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cli-spinner": "^0.2.10",
    "commander": "^3.0.2",
    "del": "^6.0.0",
    "fs-extra": "^11.0.0",
    "graphql": "^16.10.0",
    "isomorphic-git": "^1.25.0",
    "koatty_lib": "^1.3.4",
    "koatty_proto": "^1.1.12",
    "mustache": "^4.2.0",
    "ncp": "^2.0.0",
    "prettier": "^3.5.3",
    "replace": "^1.2.2",
    "tslib": "^2.6.1",
    "update-notifier": "^5.1.0"
  }
}